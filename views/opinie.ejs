<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Opinie</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="wyniki.css">
</head>
<body>
    <header>
        <h1>Opinie</h1>
        <img src="img/logo.png" class="logo" alt="logo zsti">
    </header>
    <main>
        <section class="result_posts">
            <% reviews.forEach(review => { %>
            <article class="result">
                <div class="user_info">
                    <img src="<%= review.author.pfpPath %>">
                    <div class="info">
                        <p class="username"><b><%= review.author.firstName %> <%= review.author.lastName %></b><br><%= review.author.email %></p>
                    </div>
                </div>
                <div class="sbj_info">
                    <h5>Ocena</h5>
                    <div class="stars_container">
                        <% for (let i = 1; i <= 5; i++) { %>
                            <% if (i <= review.rating) { %>
                                <i class="bi bi-star-fill"></i>
                            <% } else { %>
                                <i class="bi bi-star"></i>
                            <% } %>
                        <% } %>
                    </div>
                </div>
                <div class="description">
                    <h5>Opis</h5>
                    <p><%= review.description %></p>
                </div>
            </article>
            <% }); %>
        </section>
    </main>
    <footer>
        <div class="icon-container">
            <a href="profil.html"><i class="bi bi-person-circle active"></i></a>
            <a href="index.html"><i class="bi bi-house"></i></a>
            <a href="dodaj_zgloszenie.html"><i class="bi bi-person-plus"></i></a>
            <a href="zgloszenia.html"><i class="bi bi-people"></i></a>
        </div>
    </footer>
</body>
</html>

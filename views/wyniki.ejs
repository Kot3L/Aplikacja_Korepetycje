<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wyniki Wyszukiwania</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="wyniki.css">
</head>
<body>
    <header>
        <h1>Wyniki Wyszukiwania</h1>
        <img src="img/logo.png" class="logo" alt="logo zsti">
    </header>
    <main>
        <section class="result_posts">
            <% items.forEach(item => { %>
            <article class="result">
                <div class="user_info">
                    <img src="<%= item.author.pfpPath %>">
                    <div class="info">
                        <p class="username"><b><%= item.author.firstName %> <%= item.author.lastName %></b><br><%= item.author.email %></p>
                    </div>
                </div>
                <div class="sbj_info">
                    <h5>Informacje</h5>
                    <div class="subject_info">
                        <div class="subject"><%= item.subject %></div>
                        <div class="unit"><%= item.unit %></div>
                        <div class="topic"><%= item.topic %></div>
                    </div>
                </div>
                <div class="description">
                    <h5>Opis</h5>
                    <p><%= item.description %></p>
                </div>
                <form action="/accept-tutoring-form" method="POST">
                    <input type="hidden" name="id" value="<%= item._id %>">
                    <button class="result_link">Przyjmij <i class="bi bi-arrow-right"></i></button>
                </form>
            </article>
            <% }); %>
        </section>
    </main>
    <footer>
        <div class="icon-container">
            <a href="profil.html"><i class="bi bi-person-circle"></i></a>
            <a href="index.html"><i class="bi bi-house"></i></a>
            <a href="dodaj_zgloszenie.html"><i class="bi bi-person-plus"></i></a>
            <a href="zgloszenia.html"><i class="bi bi-people active"></i></a>
        </div>
    </footer>
</body>
</html>
